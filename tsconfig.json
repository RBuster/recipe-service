{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2017"
    ],
    "outDir": "./dist",
    "sourceMap": true,
    "rootDir": "./src",
    "experimentalDecorators": true,
    "allowJs": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
  },
  "include": ["./**/*.ts"]
}